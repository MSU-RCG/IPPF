= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label 'Agency/Institution/Employer'
    = f.text_field :agency
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.select :state, UsState::NAMES, :include_blank => "Select a State"    
  .field
    = f.label :admin
    = f.check_box :admin
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .actions
    = f.submit 'Submit User'
